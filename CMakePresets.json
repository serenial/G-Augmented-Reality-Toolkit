{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "toolchainFile": "vcpkg/scripts/buildsystems/vcpkg.cmake",
            "generator": "Ninja"
        },
        {
            "name": "windows-base",
            "inherits": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/windows-$penv{Platform}",
            "cacheVariables": {"VCPKG_TARGET_TRIPLET":"$penv{Platform}-windows-static"},
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "VCPKG_BUILD_TYPE": "release"
            }
        },
        {
            "name": "linux-desktop",
            "inherits": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/linux-desktop",
            "cacheVariables": {"VCPKG_TARGET_TRIPLET":"x64-linux"},
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name":"windows-debug",
            "inherits": ["windows-base", "debug"]
        },
        {
            "name":"windows-release",
            "inherits": ["windows-base", "release"]
        },
        {
            "name":"linux-desktop-debug",
            "inherits": ["linux-desktop", "debug"]
        },
        {
            "name":"linux-desktop-release",
            "inherits": ["linux-desktop", "release"]
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug-build",
            "configurePreset": "windows-debug",
            "targets": "install"
        },
        {
            "name": "windows-release-build",
            "configurePreset": "windows-release",
            "targets": "install"
        },
        {
            "name": "linux-desktop-debug-build",
            "configurePreset": "linux-desktop-debug",
            "targets": "install"
        }
    ]
}